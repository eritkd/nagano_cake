
  <div class="container px-5 px-sm-0 mt-5">
    <div class="row">
        
      
        <div class="p-1 w-25 bg-light text-dark text-center mb-5"><h4>　ショッピングカート　</h4></div>
      
      </div>
      
      <div class="row justify-content-center">
        <div class="col-md-12">
<table class="table table-inverse" border=1 width=auto height=auto cellpadding=10>
  <thead class="thead-light">
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価(税込)</th>
      <th scope="col">数量</th>
    　<th scope="col">小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @sum = 0 %>
        <% @cart_items.each do |cart_item| %>
      <td>
       <%= cart_item.name %>
      </td>
      <td>
        <%= (cart_item.item.price * 1.1).floor %>
      </td>
      <td>
         <%= cart_item.amount %>
      </td>
      <td>
        <%= (cart_item.item.price * 1.1).floor * cart_item.amount %>
        </td>
        <% @sum += (cart_item.item.price * 1.1).floor %>
      <td width="150">
       <%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
      </td>
  </tr>
    <% end %>
    
  </tbody>
</table>

<table border=1 cellpadding=8 cellmargin=10 align=right>
<tr><td bgcolor="lightgrey" width="150">合計金額</td>
<td width="150"><%= @sum %></td></tr>
</table>
</div>
 </div>
 
 <div class="ml-5">
 <%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %><br>
 </div>
   <div class="row justify-content-center">
<%= link_to "情報入力に進む" , new_public_order_path, class: "btn btn-success" %>
</div>
</div>
</div>


