
  <div class="container px-5 px-sm-0 mt-5">
    <div class="row">
        
      
        <div class="p-1 w-25 bg-light text-dark text-center mb-5"><h4>配送先登録/一覧</h4></div>
      
      </div>
      
      <div class="row justify-content-center">
        <div class="col-md-12">

<%= form_with model: @address, url:public_addresses_path, method: :post do |f| %>

 <div class="field">
   <label class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code  %>
  </div>
  
   <div class="field">
   <label class="col-sm-3 col-form-label">住所</label>
    <%= f.text_field :address, size:40 %>
  </div>
  
   <div class="field">
   <label class="col-sm-3 col-form-label">宛名</label>
    <%= f.text_field :name %>
    
    <%= f.submit "　新規登録　" , class: "btn btn-success btn-ml-20" %>
    
    <% end %>
  </div>
<br><br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">郵便番号</th>
      <th scope="col">住所</th>
      <th scope="col">宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <% @addresses.each do |address| %>
      <td>
         <%= address.postal_code %>
      </td>
      <td>
         <%= address.address %>
      </td>
      <td>
         <%= address.name %>
      </td>
      <td>
        <%= link_to "編集する", edit_public_address_path(address.id), class: "btn btn-success" %><%= link_to "削除する", public_address_path(address.id), class: "btn btn-danger" %>
      </td>
  </tr>
    <% end %>
    
  </tbody>
</table>
</div>
</div>
</div>
</div>


