<div class="container px-5 px-sm-0 mt-5">
    <div class="row">
　　　<div class="p-1 w-25 bg-light text-dark text-center mb-5"><h4> 注文情報入力 </h4></div>
    </div>
      <div class="w-100 mb-3">
    <h4><strong>支払方法</strong></h4>
     <%= form_with(model: @order,url: public_orders_path, local:true, method: :post) do |f| %>
     <div class="done">
    <div>
     <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
     <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    </div>
    <div>
     <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
     <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
    </div>
    </div>
    <h4><strong>お届け先</strong></h4>
    <div>
      <%= f.radio_button :done, 1 %>
      <%= f.label :done, 'ご自身の住所', value: 1 %>
      <div class="mb-3">&emsp;<%= @customer.postal_code %> <%= @customer.address %></div>
    </div>
    <div>
      <%= f.radio_button :done, 2 %>
      <%= f.label :done, '登録住所から選択', value: 2 %>
      <div class="mb-3">&emsp;<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></div>
      <%= f.radio_button :done, 3 %>
      <%= f.label :done, '新しいお届け先', value: 2 %>
      
      <div class="field">
   <label class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
   <label class="col-sm-3 col-form-label">住所</label>
    <%= f.text_field :address %>
  </div>
  
   <div class="field">
   <label class="col-sm-3 col-form-label">宛名</label>
    <%= f.text_field :name %>
  </div>
<div class="row justify-content-center">
  <%= f.submit "　確認画面へ進む　" , class: "btn btn-primary mt-4" %> 
  </div>
  
  
<% end %>
      
      </div>
      
      </div>
      