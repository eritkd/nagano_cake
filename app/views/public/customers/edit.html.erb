<div class="container px-5 px-sm-0 mt-5">
    <div class="row">
        
      
        <div class="p-1 w-25 bg-light text-dark text-center mb-5"><h4>会員情報編集</h4></div>
      
      </div>
      
      <div class="row justify-content-center">
        <div class="col-md-12">

<%= form_with model: @customer,url: public_customer_path do |f| %>
  <div class="field">
   <label class="col-sm-2 col-form-label">名前</label><label class="col-sm-1 col-form-label text-right">(姓)</label>
    <%= f.text_field :last_name %>
    <label class="col-sm-1 col-form-label text-right">(名)</label>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
   <label class="col-sm-2 col-form-label">フリガナ</label><label class="col-sm-1 col-form-label text-right">(セイ)</label>
    <%= f.text_field :last_name_kana %>
    <label class="col-sm-1 col-form-label text-right">(メイ)</label>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
   <label class="col-sm-3 col-form-label">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
   <label class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
   <label class="col-sm-3 col-form-label">住所</label>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
   <label class="col-sm-3 col-form-label">電話番号(ハイフンなし)</label>
    <%= f.telephone_field :telephone_number %>
  </div>

  
<div class="actions">
    <label class="col-sm-3 col-form-label"></label>
    <%= f.submit "　編集内容を保存　" , class: "btn btn-success mt-4 px-5" %> 
    <%= link_to "　退会する　", public_path(@customer.id) ,class: "btn btn-danger" %>
  </div>
<% end %>
<br>
</div>
</div>
</div>
</div>


