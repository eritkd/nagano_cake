<div class="container px-5 px-sm-0 mt-5">
  <div class="row">
          <div class="d-flex align-items-end"><h1>商品一覧</h1></div>
          <div class="d-flex align-items-end"><h4>（全 件）</h4></div>
      </div>
<div class="row">
<% @items.each do |item| %>
<div class="d-flex flex-column bd-highlight m-3">
    <div><%= link_to image_tag(item.get_image, size:'230x200'),public_item_path(item.id) %></div>
    <div class="mt-3"><%= item.name %><br><span>¥<%= item.price %></span></div>
    </div>
<% end %>

</div>
</div>