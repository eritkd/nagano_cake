<div class="container px-5 px-sm-0 mt-5">
    <div class="row">
　　　<div class="p-1 w-25 bg-light text-dark text-center mb-5"><h4>ジャンル一覧・追加</h4></div>
    </div>
      
     <%= form_with model: @genre,url:admin_genres_path,method: :post do |f| %>
  <label>ジャンル名</label>
  <%= f.text_field :name , class:"mx-5" %>
  <%= f.submit "　新規登録　" , class: "btn btn-success" %>
 
<% end %>
      <div class="w-50 my-3">
      <table class="table table-hover table-inverse">
          <thead>
            <tr>
            
              <th><div class="text-center">ジャンル</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          
         <tbody>
           <tr>
            <% @genres.each do |genre| %>
         
             <td>
             <%= genre.name %>
             </td>

             <td><%= link_to "　編集する　", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>

            </tr>
            <% end %>
            
           </tbody>

        </table>
      
      </div>
      
      </div>
      