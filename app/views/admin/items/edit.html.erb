<div class="container px-5 px-sm-0 mt-5">
    <div class="row">
　　　<div class="p-1 w-25 bg-light text-dark text-center mb-5"><h4>商品編集</h4></div>
    </div>
      
<%= form_with model: @item,url: admin_item_path(@item.id),method: :patch do |f| %>

  <div class="field">
  <label class="col-sm-2 col-form-label">商品画像</label>
  <%= f.file_field :image, accept: "image/*" %>
  </div>
　<div class="field">
  <label class="col-sm-2 col-form-label">商品名</label>
  <%= f.text_field :name %>
  </div>
  <div class="field">
  <label class="col-sm-2 col-form-label">商品説明</label>
  <%= f.text_area :introduction %>
  </div>
  <div class="field">
  <label class="col-sm-2 col-form-label">ジャンル</label>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい"  %>
  </div>
  <div class="field">
  <label class="col-sm-2 col-form-label">税抜価格</label>
  <%= f.text_field :price %><span>円</span>
  </div>
  <div class="field">
  <label class="col-sm-2 col-form-label">販売ステータス</label>
  <label><%= f.radio_button :is_active, "true" ,checked: true %> 販売中 </label>
<label><%= f.radio_button :is_active, "false" %> 販売停止中 </label>
  </div>
<br>
  <div class="field">
  <label class="col-sm-2 col-form-label"> </label>
  <%= f.submit "　編集する　" , class: "btn btn-success" %>
 
  </div>
<% end %>
 
      
      </div>
      