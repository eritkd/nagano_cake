<div class="container px-5 px-sm-0 mt-5">
    <div class="row">
　　　<div class="p-1 w-auto bg-light text-dark text-center mb-5"><h4>　商品一覧　</h4></h4></div>
    </div>
    
    <table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">商品ID</th>
      <th scope="col">商品名</th>
      <th scope="col">税抜価格</th>
      <th scope="col">ジャンル</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <% @items.each do |item| %>
      <td>
         <%= item.id %>
      </td>
      <td>
         <%= link_to item.name,admin_item_path(item.id) %>
      </td>
      <td>
         <%= item.price %>
      </td>
      <td>
         <%= item.genre.name %>
      </td>
      <td>
         <%= item.is_active ? '販売中':'販売停止中' %>
      </td>
  </tr>
    <% end %>
    
  </tbody>
</table>

<div class="my-3">
      
      
