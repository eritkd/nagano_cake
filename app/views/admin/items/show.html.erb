<div class="container px-5 px-sm-0 mt-5">
    <div class="row">
　　　<div class="p-1 w-25 bg-light text-dark text-center mb-5"><h4>商品詳細</h4></div>
    </div>
    </div>
    
    <div class="w-75 container px-sm-5">  
  <div class="row">
    <div class="w-100 my-3 mr-5">
      <table>
    <tr>
        <td>
            <div class="mr-5">
        <% if @item.image.attached? %>
  <%= image_tag @item.image, size: "300x300" %>
  <% else %>
  <%= image_tag 'no_image', size: "300x300" %>
  <% end %>
  </div>
     </td>
     <td>&nbsp;</td>
  
  <td valign="top">
<table class="table table-borderless mx-30">
<tr>
<td width=200>商品名</td>
<td width=auto><%= @item.name %></td>
</tr>
<tr>
<td width=200>商品説明</td>
<td width=auto><%= @item.introduction %></td>
</tr>
<tr>
<td width=200>ジャンル</td>
<td width=auto><%= @item.genre.name %></td>
</tr>
<tr>
<td width=200>税込価格<br>(税抜価格)</td>
<td width=auto><%= number_to_currency(@item.price, unit: "", strip_insignificant_zeros: true) %><span>(</span><%= number_to_currency(@item.price*1.1, unit: "", strip_insignificant_zeros: true) %><span>)</span>円</td>
</tr>
<tr>
<td width=200>販売ステータス</td>
<td width=auto><%= @item.is_active ? '販売中':'販売停止中' %></td>
</tr>
</table>
<div class="text-center">
      <%= link_to "　編集する　", edit_admin_item_path(@item.id) ,class: "btn btn-success btn-lg" %>
      </div>
</td>
      </table>
      
      </div>
      </div>
      </div>
      
      
    