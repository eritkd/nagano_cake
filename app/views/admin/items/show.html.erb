<div class="container px-5 px-sm-0 mt-5">
    <div class="row">
　　　<div class="p-1 w-25 bg-light text-dark text-center mb-5"><h4>商品詳細</h4></div>
    </div>
      
  <div class="row">
    <div class="w-50 my-3">
      <div class="col-6">
        <% if @item.image.attached? %>
  <%= image_tag @item.image, size: "300x300" %>
  <% else %>
  <%= image_tag 'no_image', size: "300x300" %>
  <% end %>
      </div>
      <div class="field">
  <label class="col-sm-2 col-form-label">商品名</label>
  <%= @item.name %>
  </div>
  <div class="field">
  <label class="col-sm-2 col-form-label">商品説明</label>
  <%= @item.introduction %>
  </div>
      
      </div>
      </div>
      
      </div>