
  <div class="container px-5 px-sm-0 mt-5">
    <div class="row">
        
      
        <div class="p-1 w-25 bg-light text-dark text-center mb-5"><h4>　会員情報編集　</h4></div>
      
      </div>
      
      <div class="row justify-content-center">
        <div class="col-md-12">

<%= form_with model: @customer ,url: admin_customer_path(@customer.id),method: :patch do |f| %>
  
  <div class="field">
   <label class="col-sm-3 col-form-label">会員ID</label>
    <%= @customer.id %>
  </div>
  
  <div class="field">
   <label class="col-sm-3 col-form-label">名前</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
   <label class="col-sm-3 col-form-label">フリガナ</label>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
  </div>

  
  
  <div class="field">
   <label class="col-sm-3 col-form-label">郵便番号</label>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
   <label class="col-sm-3 col-form-label">住所</label>
    <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
   <label class="col-sm-3 col-form-label">電話番号</label>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
   <label class="col-sm-3 col-form-label">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

<div class="field">
   <label class="col-sm-3 col-form-label">会員ステータス</label>
  <label><%= f.radio_button :is_active, "true" ,checked: true %> 有効 </label>
<label><%= f.radio_button :is_active, "false" %> 退会済み </label>
  </div>

<div class="actions">
    <label class="col-sm-3 col-form-label"></label>
    <%= f.submit "　変更を保存　" , class: "btn btn-success mt-4 px-5" %>
  </div>
<% end %>
<br>
</div>
</div>
</div>
</div>


